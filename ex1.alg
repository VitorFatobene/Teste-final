algoritmo "Área e perímetro"

var

base, altura, area, perimetro : real

inicio

escreval ("Qual o tamanho da base do retângulo (m)")
leia (base)
escreval ("Qual a altura do retângulo (m)")
leia (altura)
area := base * altura
perimetro := (2*base) + (2*altura)
escreval ("A área do retângulo é ", area, ".")
escreval ("O perímetro do retângulo é ", perimetro, ".")

fimalgoritmo